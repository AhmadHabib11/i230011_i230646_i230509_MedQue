<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setupprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SetUpProfile">



    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="59dp"
        android:src="@drawable/arrowback"
        android:contentDescription="Back button" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/btnBack"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:text="Fill Your Profile"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Profile Image Container -->
    <RelativeLayout
        android:id="@+id/profileImageContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dp"
            android:contentDescription="Profile image" />

        <!-- Edit Icon -->
        <ImageView
            android:id="@+id/btnEditImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/editdp"
            android:contentDescription="Edit profile image" />
    </RelativeLayout>

    <!-- Form Fields Container -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageContainer"
        android:layout_above="@id/btnSave"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- Name Input -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/signupbars"
            android:hint="Username"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="textPersonName" />

        <!-- Nickname Input -->
        <EditText
            android:id="@+id/etNickname"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/signupbars"
            android:hint="Nickname"
            android:textColorHint="#999999"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="text" />

        <!-- Date of Birth Input -->
        <RelativeLayout
            android:id="@+id/dobContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/signupbars"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/dobicon"
                android:contentDescription="Calendar icon" />

            <TextView
                android:id="@+id/tvDateOfBirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivCalendar"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:text="Date of Birth"
                android:textColor="#999999"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Gender Input -->
        <RelativeLayout
            android:id="@+id/genderContainer"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/signupbars"
            android:clickable="true"
            android:focusable="true">

            <EditText
                android:id="@+id/etGender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:hint="Gender"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="50dp"
                 />

            <ImageView
                android:id="@+id/ivGenderDropdown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/dropdown"
                android:contentDescription="Dropdown icon" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="80dp"
        android:text="Save"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/darkgreen"
        android:elevation="4dp"
        app:cornerRadius="28dp" />

</RelativeLayout>