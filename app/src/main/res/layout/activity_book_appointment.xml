<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Book_appointment">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:elevation="2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:contentDescription="Back"
            android:src="@drawable/back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Book Appointment"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_confirm"
        android:layout_below="@id/top_bar"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Select Date Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Calendar Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Month Header -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp">

                        <!-- Month/Year -->
                        <TextView
                            android:id="@+id/tv_month_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="June 2023"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Previous Month Button -->
                        <ImageView
                            android:id="@+id/btn_prev_month"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="32dp"
                            android:contentDescription="Previous Month"
                            android:src="@drawable/arrow_left" />

                        <!-- Next Month Button -->
                        <ImageView
                            android:id="@+id/btn_next_month"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="Next Month"
                            android:src="@drawable/arrow_right" />

                    </RelativeLayout>

                    <!-- Day Headers -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="7">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sun"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Mon"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Tue"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Wed"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Thu"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Fri"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Sat"
                            android:textColor="#808080"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <!-- Calendar Grid - STATIC DATES -->
                    <GridLayout
                        android:id="@+id/calendar_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:columnCount="7"
                        android:rowCount="5">

                        <!-- Week 1 -->
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_1" android:text="1" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_2" android:text="2" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_3" android:text="3" />

                        <!-- Week 2 -->
                        <TextView style="@style/CalendarDate" android:id="@+id/date_4" android:text="4" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_5" android:text="5" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_6" android:text="6" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_7" android:text="7" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_8" android:text="8" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_9" android:text="9" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_10" android:text="10" />

                        <!-- Week 3 -->
                        <TextView style="@style/CalendarDate" android:id="@+id/date_11" android:text="11" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_12" android:text="12" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_13" android:text="13" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_14" android:text="14" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_15" android:text="15" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_16" android:text="16" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_17" android:text="17" />

                        <!-- Week 4 -->
                        <TextView style="@style/CalendarDate" android:id="@+id/date_18" android:text="18" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_19" android:text="19" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_20" android:text="20" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_21" android:text="21" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_22" android:text="22" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_23" android:text="23" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_24" android:text="24" />

                        <!-- Week 5 -->
                        <TextView style="@style/CalendarDate" android:id="@+id/date_25" android:text="25" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_26" android:text="26" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_27" android:text="27" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_28" android:text="28" />
                        <TextView style="@style/CalendarDate" android:id="@+id/date_29" android:text="29" />
                        <TextView style="@style/TimeSlotSelected" android:id="@+id/date_30" android:text="30" />
                        <TextView style="@style/CalendarDateGray" android:text="1" />

                        <!-- Week 6 -->
                        <TextView style="@style/CalendarDateGray" android:text="2" />
                        <TextView style="@style/CalendarDateGray" android:text="3" />
                        <TextView style="@style/CalendarDateGray" android:text="4" />
                        <TextView style="@style/CalendarDateGray" android:text="5" />
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDateGray" android:text="" />
                        <TextView style="@style/CalendarDateGray" android:text="" />

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Select Hour Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Select Hour"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Time Slots Grid -->
            <GridLayout
                android:id="@+id/time_slots_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:columnCount="3"
                android:rowCount="5">

                <!-- Row 1 -->
                <TextView
                    android:id="@+id/time_09_00"
                    style="@style/TimeSlotUnselected"
                    android:text="09.00 AM" />

                <TextView
                    android:id="@+id/time_09_30"
                    style="@style/TimeSlotUnselected"
                    android:text="09.30 AM" />

                <TextView
                    android:id="@+id/time_10_00"
                    style="@style/TimeSlotSelected"
                    android:text="10.00 AM" />

                <!-- Row 2 -->
                <TextView
                    android:id="@+id/time_10_30"
                    style="@style/TimeSlotUnselected"
                    android:text="10.30 AM" />

                <TextView
                    android:id="@+id/time_11_00"
                    style="@style/TimeSlotUnselected"
                    android:text="11.00 AM" />

                <TextView
                    android:id="@+id/time_11_30"
                    style="@style/TimeSlotUnselected"
                    android:text="11.30 AM" />

                <!-- Row 3 -->
                <TextView
                    android:id="@+id/time_03_00"
                    style="@style/TimeSlotUnselected"
                    android:text="3.00 PM" />

                <TextView
                    android:id="@+id/time_03_30"
                    style="@style/TimeSlotUnselected"
                    android:text="3.30 PM" />

                <TextView
                    android:id="@+id/time_04_00"
                    style="@style/TimeSlotUnselected"
                    android:text="4.00 PM" />

                <!-- Row 4 -->
                <TextView
                    android:id="@+id/time_04_30"
                    style="@style/TimeSlotUnselected"
                    android:text="4.30 PM" />

                <TextView
                    android:id="@+id/time_05_00"
                    style="@style/TimeSlotUnselected"
                    android:text="5.00 PM" />

                <TextView
                    android:id="@+id/time_05_30"
                    style="@style/TimeSlotUnselected"
                    android:text="5.30 PM" />

            </GridLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Confirm Button -->

    <TextView
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/selected"
        android:paddingLeft="130dp"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>