<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home">

    <!-- Notification Icon (Top Right) -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/notification"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="Notification Icon" />

    <!-- Profile Image -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/profile_holder"
        app:civ_border_width="0dp"
        app:civ_border_color="@android:color/transparent" />

    <!-- User Name -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michael Smith"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <!-- Joined Year -->
    <TextView
        android:id="@+id/joined_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined 2023"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_below="@id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/joined_year"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Book Appointment Button -->
        <Button
            android:id="@+id/book_appointment_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Book Appointment"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="#214E34"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false" />

        <!-- Upload Report Button -->
        <Button
            android:id="@+id/upload_report_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Upload Report"
            android:textSize="14sp"
            android:textColor="#214E34"
            android:background="@drawable/white_border"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false" />

    </LinearLayout>

    <!-- Current Appointment Text -->
    <TextView
        android:id="@+id/current_appointment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Appointment"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_below="@id/buttons_container"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp" />

    <!-- Appointment Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/appointment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/current_appointment_label"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Appointment Time -->
            <TextView
                android:id="@+id/appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, 10:00 AM"
                android:textColor="#808080"
                android:textSize="13sp" />

            <!-- Doctor Name -->
            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkup with Dr. Chen"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_below="@id/appointment_time"
                android:layout_marginTop="6dp" />

            <!-- Clinic Name -->
            <TextView
                android:id="@+id/clinic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiology Clinic"
                android:textColor="#808080"
                android:textSize="13sp"
                android:layout_below="@id/doctor_name"
                android:layout_marginTop="4dp" />

            <!-- Queue Button -->
            <Button
                android:id="@+id/queue_btn"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:text="Queue #2"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:backgroundTint="#214E34"
                android:layout_below="@id/clinic_name"
                android:layout_marginTop="8dp"
                android:textAllCaps="false" />

            <!-- Clinic Image -->
            <ImageView
                android:id="@+id/clinic_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:itemIconTint="@color/nav_color"
        app:itemTextColor="@color/nav_color"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true" />

</RelativeLayout>