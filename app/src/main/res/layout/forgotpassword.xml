<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotpassword"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword"
    android:background="@color/lightgreen">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/whitebackarrow"
        android:clickable="true"
        android:focusable="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center_horizontal">

        <!-- Top Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:src="@drawable/whitelogo"
            android:layout_marginTop="12dp"/>

        <!-- App Name Image -->
        <ImageView
            android:id="@+id/appNameImage"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginTop="-15dp"
            android:src="@drawable/medquewhite" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <!-- Forget Password Title -->
        <TextView
            android:id="@+id/forgotPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Enter your Email, We will send you a verification code."
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:padding="14dp"
            android:paddingLeft="48dp"
            android:background="@drawable/signupedittextbg"
            android:drawableLeft="@drawable/emailicon"
            android:drawablePadding="12dp"
            android:textColorHint="#999999" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3" />

        <!-- Send Code Button -->
        <Button
            android:id="@+id/sendCodeButton"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Send Code"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/darkgreen"
            android:elevation="4dp"
            app:cornerRadius="28dp" />

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>

</RelativeLayout>