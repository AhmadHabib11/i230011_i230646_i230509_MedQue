<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <!-- Icon Circle Background -->
    <View
        android:id="@+id/iconBackground"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/notification_circle_green" />

    <!-- Notification Icon -->
    <ImageView
        android:id="@+id/notificationIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/iconBackground"
        android:layout_alignTop="@id/iconBackground"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/calendar_tick" />

    <!-- Notification Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iconBackground"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Header (Title + Time) -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/appointment_success"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/time_1h"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Message -->
        <TextView
            android:id="@+id/notificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/appointment_success_message"
            android:textColor="@color/text_tertiary"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>
</RelativeLayout>